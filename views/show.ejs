<%-include("partials/header")%>

<div class="container">
		<div class="row">
			<div class="col-lg-3">
			  	<p class="lead">YelpCamp</p>
			  	<div class="list-group">
			  		<li class="list-group-item active">info1</li>
			  		<li class="list-group-item">info2</li>
			  		<li class="list-group-item">info3</li>
			  	</div>
			 </div>
			 <div class="col-lg-9">
			 	<div class="img-thumbnail">
			 		<img class="img-responsive" src="<%=campground.image%>">
			 		<div class="caption-full">
			 			<h4><%=campground.name%></h4>
			 			<h4 class="pull-right">$9.00/NIGHT</h4>
			 		</div>
					 <p class="lead"><%=campground.description%></p>
					 <p>Submitted by: <em><%=campground.author.username%></em></p>
			 	</div>
			 	<br>
			 	<div>
					 <%if(current && campground.author.id.equals(current._id)){%>
			 					<a class="positive ui button" href="/campgrounds/<%=campground._id%>/comments/new">Add new Comment</a>
			 					<a class="ui yellow basic button" href="/campgrounds/<%=campground._id%>/edit%>">edit</a>
			 					<form id="postdel" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
			 								<button class="ui red button">DELETE</button>
								 </form>
								<%}%>
			 	</div>
			 	<hr>
			 	<%campground.comment.forEach(function(comment){%>
			 		<div class="row">
			 			<div class="col-lg-12">
							<strong><p><%=comment.author.username%><p></strong>
						</div>
						<div class="col-lg-12">
							<p><%=comment.text%><p>
						</div>
						<form action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
							<input type="submit" value="DELETE comment">
						</form>
					</div>
				<%})%>
			 </div>
		</div>
</div>







<%-include("partials/footer")%>